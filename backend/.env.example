# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (MySQL on Aiven)
DB_HOST=mysql-example.aivencloud.com
DB_PORT=12345
DB_USER=avnadmin
DB_PASSWORD=admin_password
DB_NAME=defaultdb

# SSL Certificate (REQUIRED for Aiven MySQL)
# Option 1: Provide the certificate content directly (multi-line PEM format)
# DB_CA_CERT="-----BEGIN CERTIFICATE-----\nMIIEQTCCAq..."
# Option 2: Provide the path to the certificate file
# DB_CA_CERT_PATH=/path/to/ca-certificate.crt

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Admin Password (already hashed in database as "naiwan")
# The password hash is stored in the settings table during migration
# Default password: naiwan
